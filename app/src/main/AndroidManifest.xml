<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.inge.nathan.monopolycalculator">

    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/custom_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.StandingsActivity"
            android:label="@string/title_activity_standings"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".UI.EditPlayerActivity">
        </activity>
        <activity android:name=".UI.AboutActivity">
        </activity>
        <activity android:name=".UI.RulesActivity">
        </activity>
    </application>

</manifest>